        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group mb-4">
            @Html.LabelFor(model => model.ProductId, htmlAttributes: new { @class = "m-1 control-label col-md-2" })
